function _init()
 x=64
 y=64
 dx=1
 dy=1
end

function _update60()
 x+=dx
 y+=dy
 
 if x<=0 or x>=127 then
  dx=-dx
 end
 
 if y<=0 or y>=127 then
  dy=-dy
 end
end

function _draw()
 cls(1)
 circfill(x,y,5,7)
 print("demo game",1,1,7)
 print("press any key",1,120,6)
end
